{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "UniversityDB": "Data Source=DESKTOP-PI51JKL;User ID=admin;Password=admin3;Connect Timeout=30;Encrypt=False;TrustServerCertificate=False;Database=UniversityDB;ApplicationIntent=ReadWrite;MultiSubnetFailover=False "
  },
  "JwtSettings": {
    "ValidateIssuerSingingKey": true,
    "IssuerSigningKey": "f5IY4AVohAxyXLJN",
    "ValidateIssuer": true,
    "ValidIssuer": "https://localhost:7143",
    "ValidateAudience": true,
