  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    },
    "WriteTo": [ //Donde vamos a escribir los logs
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt", //Ruta de la carpeta de logs
          "rollingInterval": "Day" //Intervalo de reemplazo de los archivos de logs
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "UniversityDB", //Nombre del contexto de Cadena de conexion B.D.
          "sinkOptionsSection": {
            "tableName": "Logs", //Nombre de la tabla
            "schemaName": "EventLogging",
            "autoCreateSqlTable": true, //Que se cree si no existe
            "batchPostingLimit": 1000, //Limite de subidas
            "period": "0.00:00:30" // Cada cuanto actualiza la tabla
          },
          "restrictedToMinimumLevel": "Verbose"
        }
      }
    ]
  }

}
